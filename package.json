{
  "name": "angular2-rest-client",
  "version": "2.0.0",
  "description": "Angular2 REST Client",
  "main": "index.js",
  "scripts": {
    "preversion": "npm test",
    "test": "karma start",
    "tsc": "tsc",
    "ngc": "./node_modules/.bin/ngc",
    "rollup": "rollup",
    "copy:dist": "cp src/package.json dist/ && cp README.md dist/",
    "copy:version": "cd dist && npm version $(cat ../package.json | grep version | head -1 | awk -F: '{ print $2 }' | sed 's/[\",]//g')",
    "rollup:dist": "npm run rollup -- -c rollup.config.js",
    "build:dist": "npm run ngc -- -p tsconfig.build.json && npm run rollup:dist && npm run copy:dist && npm run copy:version",
    "prebuild:dist": "rm -rf dist/*",
    "postbuild:dist": "find dist/ -type f -name '*.d.ts' -print0 | xargs -0 sed -i '' -e 's/\\/\\/\\/ <reference types=\"core-js\" \\/>//g'"
  },
  "types": "index.d.ts",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/gizm0bill/angular2-rest-client.git"
  },
  "keywords": [
    "angular2",
    "http",
    "rest",
    "client"
  ],
  "author": "Mihai Billy Bălăceanu",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/gizm0bill/angular2-rest-client/issues"
  },
  "homepage": "https://github.com/gizm0bill/angular2-rest-client",
  "dependencies": {
    "@angular/common": "^4.0.2",
    "@angular/compiler": "^4.0.2",
    "@angular/core": "^4.0.2",
    "@angular/http": "^4.0.2",
    "@angular/platform-browser": "^4.0.2",
    "@angular/platform-browser-dynamic": "^4.0.2",
    "core-js": "^2.4.1",
    "reflect-metadata": "^0.1.10",
    "rxjs": "^5.0.2",
    "systemjs": "0.19.39",
    "zone.js": "^0.8.4"
  },
  "devDependencies": {
    "@angular/animations": "^4.0.2",
    "@angular/compiler-cli": "^4.0.2",
    "@angular/platform-server": "^4.0.2",
    "@types/core-js": "^0.9.34",
    "@types/jasmine": "^2.5.43",
    "@types/node": "^6.0.42",
    "@types/source-map": "^0.5.0",
    "@types/webpack": "^2.2.8",
    "awesome-typescript-loader": "^3.0.8",
    "codelyzer": "^2.1.1",
    "concurrently": "^3.0.0",
    "istanbul-instrumenter-loader": "^0.2.0",
    "jasmine-core": "~2.5.2",
    "karma": "^1.5.0",
    "karma-chrome-launcher": "^2.0.0",
    "karma-coverage": "^1.1.1",
    "karma-jasmine": "^1.1.0",
    "karma-mocha-reporter": "^2.2.2",
    "karma-phantomjs-launcher": "^1.0.2",
    "karma-remap-coverage": "^0.1.4",
    "karma-sourcemap-loader": "^0.3.7",
    "karma-webpack": "^1.8.0",
    "phantomjs": "^2.1.7",
    "rollup": "^0.41.4",
    "rollup-plugin-commonjs": "^8.0.2",
    "rollup-plugin-node-resolve": "^3.0.0",
    "rollup-plugin-uglify": "^1.0.1",
    "source-map-loader": "^0.1.6",
    "tslint": "^4.5.1",
    "typescript": "^2.3.0",
    "webpack": "^2.2.0"
  }
}
